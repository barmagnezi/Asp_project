@model mvc4_poject.Models.Reporter

@{
    ViewBag.Title = "Edit";
}

<br />
<h1><b>Edit @Model.name</b></h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Reporter</legend>

        @Html.HiddenFor(model => model.ID)

        <h2><u>Reporters id:</u></h2>
        <div class="editor-field">
            <input type="text" class="form-control" id="tz" name="tz" maxlength="9" value=@Model.tz style="width:300px;" />
        </div>

        <h2><u>Name:</u></h2>
        <div class="editor-field">
            <input type="text" class="form-control" id="name" name="name" value=@Model.name style="width:300px;" />
        </div>

        <h2><u>Birthday:</u></h2>
        <div class="editor-field">
            <input type="text" class="form-control" id="bd" name="bd" value=@Model.bd maxlength="10" style="width: 300px;" />
        </div>

        <h2><u>Image:</u></h2>
        <div class="editor-field">
            <input type="text" class="form-control" id="img" name="img" value=@Model.img style="width:400px;" />
        </div>

        <h2><u>Information:</u></h2>
        <div class="editor-field">
            <input type="text" class="form-control" id="info" name="info" value=@Model.info style="width:400px;" />
        </div>

        <h2><u>Email:</u></h2>
        <div class="editor-field">
            <input type="email" class="form-control" id="email" name="email" value=@Model.email style="width: 300px;" />
        </div>

        <h2><u>Phone number:</u></h2>
        <div class="editor-field">
            <input type="tel" class="form-control" id="phone" name="phone" maxlength="11" value=@Model.phone style="width:300px;" />
        </div>
        <p>
            <button type="submit" class="btn btn-default"> Save</button>
        </p>
    </fieldset>
}

<h2>
    @Html.ActionLink("Back", "Index")
</h2>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}