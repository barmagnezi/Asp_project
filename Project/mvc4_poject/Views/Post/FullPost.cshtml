@model mvc4_poject.Models.helperBlogController

@{
    ViewBag.Title = "Index2";
}

<h1></h1>
<!--always will be one-->
@foreach (var item in Model.PostComments)
{
    <div style="width:100%">
        <section style="padding:12px">
            <article class=" blogpost">
                <header>
                    <h1>@item.post.title</h1>
                    <p>
                        <h4>Posted on (@item.post.date) </h4>
                        <h4>
                            Written by
                            <a href=@Url.Action("Details", "Reporters", new { id = item.post.IdAuthor })>@item.post.author</a>
                        </h4>

                        <h4>Category: @item.post.category</h4>
                        <h4>Number of comments:@(item.numberOfCom)</h4>
                    </p>
                </header>
                <p>
                    <h5>@item.post.intro</h5>
                </p>
                
                    <div>
                        <p>@item.post.body</p>
                        @if (@item.post.images != null)
                        {
                            <!--
                    <img src="@item.post.images" />
                -->
                            char[] delimiterChars = { ',' };
                            string[] images = (item.post.images.Split(delimiterChars));

                                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        <!--
                               <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            -->
                                        @{int counter = 0;}
                                        <li data-target="#myCarousel" data-slide-to=@counter class="active"></li>
                                        @foreach (var helper in images)
                                        {
                                            counter=counter+1;
                                            if (helper != images.First())
                                            {
                                                <li data-target="#myCarousel" data-slide-to=@counter></li>
                                            }
                                        }

                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner" role="listbox">
                                        @{counter = 2;}
                                        @foreach (var helper2 in images)
                                        {
                                            if (counter.Equals(2))
                                            {
                                                <div class="item active" align="center">
                                                    <img src=@helper2 alt="" width="700" height="700" align="middle">
                                                    <div class="carousel-caption">
                                                    </div>
                                                </div>
                                                        counter = 3;
                                            }
                                            else
                                            {
                                                <div class="item" align="center">
                                                    <img src=@helper2 alt="" width="700" height="700" align="middle">
                                                    <div class="carousel-caption">
                                                    </div>
                                                </div>
                                            }

                                        }
                                    </div>

                                    <!-- Left and right controls -->
                                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>



                        }

                        @if (@item.post.video != null)
                        {
                            <video controls="controls">
                                <source src=@item.post.video type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                        }

                    </div>
</article>
        </section>
    </div>
    
    <article style="padding-left:0px" id="headline">
        <h3>comments:</h3><br />
    </article>
    
    if (item.comments != null)
    {
        foreach (var comment in item.comments)
        {
            <br />
            <section id="comments">
                <!--all the comments-->
                <article style="padding-left:30px "><!--
                                                        
                                                    
                    @{if(@comment.id.Equals(1)){
                        <h3 style="padding-left:25px ;padding-top:10px">comments:</h3><br />
                    }}-->
                    <header>
                        <h4>@comment.title</h4>   by:@comment.author
                    </header>
                    <p style="padding-left:10px ">@comment.body</p>
                </article>

            </section>
        }
    }    <br />
        <div>
            <article>
                <form action="/Post/addComment">
                    <h3>Add comment:</h3><br>
                    author: <input type="text" name="author"><br>
                    title: <input type="text" name="title"><br>
                    body: <input type="text" name="body"><br>
                    <input type="text" name="postId" value="@item.post.id" readonly hidden><br>
                    <input type="submit" value="Submit">
                </form>
            </article>
        </div>

}
