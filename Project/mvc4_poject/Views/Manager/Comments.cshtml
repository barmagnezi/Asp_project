@model IEnumerable<mvc4_poject.Models.Comment>

@{
    ViewBag.Title = "Comments";
}

@if(Model.ToArray().Length==0 || Model==null){
    <h1 style="text-decoration: underline;"> No comments!</h1>
}
else
{
    <h2 style="text-decoration: underline;">Comments</h2>
    <table>
        <tr>
            <td>id</td>
            <td>author</td>
            <td>title</td>
            <td>body</td>
            <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>@item.id</td>
            <td>@item.author</td>
            <td>@item.title</td>
            <td>@item.body</td>
            <td>
                @Html.ActionLink("Delete", "DeleteComment", new { CommentId = item.id, PostId = item.postId })
            </td>
        </tr>
        }

    </table>
}
<h1 style="color:red">
    @Html.ActionLink("Back<", "Index")
</h1>


